<view class='container-y app-content-padding'>
  <view class='container-y container'>
    <image mode='aspectFill' class='img' src='{{sentence.picname?"https://www.zhangw.xyz/images/"+sentence.picname:defaultImg}}'></image>
    <view class='main container-y'>
      <text selectable='{{true}}'>{{sentence.content}}</text>
      <text selectable='{{true}}' class='sentence-author'>-- {{sentence.author}}</text>
    </view>
    <!-- 图片‘心’ -->
    <view class='footer' wx:if='{{canuse}}'>
      <image wx:if='{{isLike}}' 
      class='like-img' 
      src='/pages/img/favorite_selected.png'
      bindtap='tapDelLike'
      ></image>
       <image wx:else 
       class='like-img' 
       src='/pages/img/favorite_unselected.png'
       bindtap='tapAddLike'></image>
    </view>
  </view>
</view>