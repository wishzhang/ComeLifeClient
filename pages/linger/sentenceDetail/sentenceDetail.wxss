/* pages/linger/sentenceDetail/sentenceDetail.wxss */
page{
  background-color: white;
}

.container {
  background-color: white;
  box-shadow: 2rpx 4rpx 2rpx 5rpx rgba(255, 69, 0, 0.15);
  border-radius: 8rpx;
  padding-top: 15rpx;
  padding-bottom: 10rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.img{
  width:100%;
  margin-bottom: 20rpx;
}

.main {
  min-height: 100rpx;
  width: 100%;
}

.sentence-author{
  width:100%;
  margin-top:40rpx;
  margin-bottom:20rpx;
  text-align: right;
}

.footer {
  width:100%;
  height: 50rpx;
  display: flex;
  align-items: center;
}

.footer-img{
  width:40rpx;
  height:40rpx;
  padding-top:5rpx;
  padding-bottom: 5rpx;
  padding-right: 5rpx;
  margin-right:15rpx;
}

/* 转发按钮 */
.transmit-btn{
  width:45rpx;
  height:45rpx;
  box-sizing: content-box;
  display: flex;
  text-align: left;
  line-height: 45rpx;
  padding-left: 0;
  padding-right: 20rpx;
  margin: 0;
  border-radius: 0;
  font-size:30rpx;
  background-color: white;
  color:white;
}

.transmit-btn::after {
  border: 0; 
}

.transmit-img{
  width:45rpx;
  height:45rpx;
}
