/* pages/linger/talk/talk.wxss */

page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

/*聊天内容布局  */

.content-box {
  height: auto;
  max-height: calc(100% - 101rpx);
  padding-left: 27rpx;
  padding-right: 27rpx;
  overflow: auto;
}

.content-item-box {
  width: 100%;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.content-item-left-box {
  width: 100%;
  display: flex;
  justify-content: flex-start;
}

.content-item-right-box {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

.role-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 45rpx;
}

.role-text {
  max-width:calc(100% - 200rpx);
  background-color: white;
  padding: 20rpx;
  margin-left:20rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  word-break: break-all;
  word-wrap: break-word;
}

/*footer  */
.footer{
  width:100%;
  min-height:101rpx;
  box-sizing: border-box;
}

.item-line{
  width:100%;
  height:1px;
background:-webkit-linear-gradient(top,rgba(255,255,255,0),rgba(255,255,255,0),rgba(138,138,138,1));
}
/*发送布局  */

.send-box {
  min-height: 100rpx;
  max-height: 300rpx;
  padding-top: 17rpx;
  padding-bottom: 17rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  box-sizing: border-box;
  overflow: hidden;
}

.send-textarea {
  width: 100%;
  min-height: 65rpx;
  max-height: 200rpx;
  border-bottom: 1px solid gray;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  padding-right: 0;
  margin-right: 20rpx;
  margin-left: 127rpx;
}

.send-btn {
  width: 20%;
  height: 65rpx;
  padding: 0 0;
  padding-left: 0;
  padding-right: 0;
  margin-right: 27rpx;
  margin-left: 0;
  align-self: flex-end;
}
/*以下属性在这里才生效  */
button[size=mini] {
  padding: 0 0;
  line-height: 65rpx;
}
