/* 导航栏 */
.row {
  width: 100%;
  display: flex;
  height: 200rpx;
  box-sizing: border-box;
  background-color: white;
  margin-bottom: 27rpx;
}

.col {
  width: 25%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-image {
  width: 60rpx;
  height: 60rpx;
  padding-bottom: 15rpx;
}

/*主体：句子迷  */

.main {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
/* 句子迷标题 */
.subtitle {
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 40rpx;
  font-weight: bold;
}

.title-line {
  width: 100%;
  height: 1px;
  box-sizing: border-box;
  background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0), rgba(138, 138, 138, 1));
}

.content {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  background-color: white;
}

/* 句子迷 */

.content-item {
  padding-left: 27rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  padding-right: 27rpx;
}

/* 句子容器样式 */
.item-wrap{
  box-shadow: 2rpx 4rpx 2rpx 5rpx rgba(255,69,0,0.15);
  border-radius: 8rpx;
  padding-top:10rpx;
  padding-bottom:10rpx;
  padding-left:15rpx;
  padding-right:15rpx;
}

.content-sentences {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.item-footer {
  width: 100%;
  padding-top: 27rpx;
  text-align: right;
}

.item-line {
  width: 100%;
  height: 1px;
  background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0), rgba(138, 138, 138, 1));
  margin-left: 17rpx;
}
