/* pages/linger/linger.wxss */

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.row {
  width: 100%;
  display: flex;
  height: 200rpx;
  box-sizing: border-box;
  background-color: white;
  margin-bottom: 27rpx;
}

.col {
  width: 25%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* header item  */

.item-image {
  width: 60rpx;
  height: 60rpx;
  padding-bottom: 15rpx;
}

/*main  */

.main {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.subtitle {
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 40rpx;
  font-weight: bold;
}

.title-line {
  width: 100%;
  height: 1px;
  box-sizing: border-box;
   background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0),rgba(138, 138, 138, 1));
}

.content {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  background-color: white;
}

.content-item {
  padding-left: 27rpx;
  padding-top: 35rpx;
  padding-bottom: 20rpx;
  padding-right: 27rpx;
}

.item-main {
  width: 100%;
}

.item-footer {
  width: 100%;
  padding-top: 27rpx;
  display: flex;
  justify-content: flex-end;
}

.item-line {
  width: 100%;
  height: 1px;
  background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0), rgba(138, 138, 138, 1));
  margin-left:17rpx;
}
