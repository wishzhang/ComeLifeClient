/* pages/mine/msg/msg.wxss */
page{
  width:100%;
}
.portrait{
  width:130rpx;
  height:130rpx;
  border-radius: 65rpx;
  overflow: hidden;
}

.container{
  width:100%;
  margin:25rpx 0;
  display: flex;
  flex-direction:column;
  align-items: center;
  padding: 0 27rpx;
  box-sizing: border-box;
  background-color: white;
}

.item{
  width:100%;
  padding: 30rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-image{
  padding: 15rpx 0;
}

.line{
  width:100%;
  height:1px;
  background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0), rgba(138, 138, 138, 1));
}