/* pages/mine/mine.wxss */
.user-content{
  width:100%;
  height:300rpx;
  padding:55rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  background-color:#303030;
}

.user-image {
  width:130rpx;
  height:130rpx;
  border-radius: 65rpx;
  overflow: hidden;
}

.user-image-text{
  color:white;
}
/*授权登录  */
.user-authorize{
  width:100%;
  height:300rpx;
  padding: 55rpx 0;
  display:flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
   background-color:#303030;
}

/*item */

.mine-item-content{
  height:100rpx;
  background-color: #FFF;
  padding: 0 27rpx;
}

.mine-item-content-image{
  width:30rpx;
  height:30rpx;
  margin-right: 25rpx;
}


.mine-item-line{
  width:100%;
  height:25rpx;
}
.feedback-item-line{
  height:55rpx;
}