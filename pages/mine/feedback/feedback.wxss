page{
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.form {
  width: 100%;
}

.content {
  width: 100%;
  height: 300rpx;
  background-color: white;
  padding: 25rpx 27rpx;
  box-sizing: border-box;
}

.email {
  width: 100%;
  background-color: white;
  padding: 25rpx 27rpx;
  margin-top: 25rpx;
}

.button-container{
  margin-top: 50rpx;
  display: flex;
  align-items: center;
}

.submit {
  width: calc(100% - 25rpx);
  margin: 0 25rpx;
}

.submit button[size=mini]{
  padding: 15rpx 0;
}
