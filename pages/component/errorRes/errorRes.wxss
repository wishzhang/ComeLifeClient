/* 全局配置 */
/*默认字体大小  */
 input,textarea,text{
  font-size:30rpx;
}

.app-fontsize-title {
  font-size: 32rpx;
}

.app-fontsize-main {
  font-size: 30rpx;
}

.app-fontsize-note {
  font-size: 24rpx;
}

/*字体颜色  */
.app-fontcolor-main{
  color:#2c2c2c
}
.app-fontcolor-note{
  color:#8a8a8a
}

/*empty 模板 css  */
page{
  background-color: white;
}

.empty-container {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30%;
}

.empty-image {
  width: 250rpx;
  height: 250rpx;
}

.empty-button{
  margin-top:10rpx;
}