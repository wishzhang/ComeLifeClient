
/*垂直排列佈局 */

page{
  width:100%;
  height:100%;
  background-color: #f4f4f4;
}

.container-y{
     width:100%;
     display:flex;
     flex-direction:column;
     box-sizing:border-box;
     overflow-x: hidden;
}

/*内容区到边界的距离  */
.app-content-padding {
  padding-top: 25rpx;
  padding-bottom:25rpx;
  padding-left: 27rpx;
  padding-right:27rpx;
} 

.app-content-margin {
  margin: 25rpx 27rpx;
}


/* 背景顏色  */

.app-bgcolor {
  background-color: #f4f4f4;
}

.app-headercolor{
  background-color: #303030;
}

/*字体大小*/

/*默认字体大小  */
 input,textarea,text{
  font-size:30rpx;
}

.app-fontsize-title {
  font-size: 32rpx;
}

.app-fontsize-main {
  font-size: 30rpx;
}

.app-fontsize-note {
  font-size: 24rpx;
}

/*字体颜色  */
.app-fontcolor-main{
  color:#2c2c2c
}
.app-fontcolor-note{
  color:#8a8a8a
}

/*item header  */
.header {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.header .header-headshot {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  margin-right: 15rpx;
}

/*item main  */

.main {
  width: 100%;
  display: flex;
  padding: 20rpx 0;
  padding-left: 85rpx;
  box-sizing: border-box;
}

/*item footer  */

.footer {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 85rpx;
  justify-content: space-between;
}

.favorite-image {
  width: 35rpx;
  height: 35rpx;
  padding-top:10rpx;
  padding-left:10rpx;
  padding-right:10rpx;
}

.item-line {
  display: flex;
  width: 100%;
  height: 1px;
  background: -webkit-linear-gradient(top, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0), rgba(138, 138, 138, 1));
}

/*empty 模板 css  */

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 250rpx;
}

.empty-image {
  width: 250rpx;
  height: 250rpx;
}

/*nomore  */

.nomore {
  padding: 15rpx 0;
}
